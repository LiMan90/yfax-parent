<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yfax.webapi.qmtt.vo.AwardHisVo">

	<select id="selectAwardHisByPhoneNum" resultType="com.yfax.webapi.qmtt.vo.AwardHisVo">
        select * from qmtt_award_his where phoneNum=#{phoneNum} order by createDate desc
    </select>
    
    <!-- 今日签到判断 -->
    <select id="selectAwardHisIsFirstLogin" resultType="com.yfax.webapi.qmtt.vo.AwardHisVo">
         select * from qmtt_award_his where phoneNum=#{phoneNum} and date_format(createDate,'%Y-%m-%d')=#{currentTime} limit 1
    </select>

    <!-- 添加 -->
	<insert id="insertAwardHis" parameterType="com.yfax.webapi.qmtt.vo.AwardHisVo">
		insert into qmtt_award_his
		<trim prefix="(" suffix=")" suffixOverrides="," >
		  <if test="id != null" > id, </if>
		  <if test="phoneNum != null" > phoneNum, </if>
		  <if test="awardType != null" > awardType, </if>
		  <if test="gold != null" > gold, </if>
		  <if test="createDate != null" > createDate, </if>
		  <if test="updateDate != null" > updateDate, </if>
		  
		</trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
		  <if test="id != null" > #{id}, </if>
		  <if test="phoneNum != null" > #{phoneNum}, </if>
		  <if test="awardType != null" > #{awardType}, </if>
		  <if test="gold != null" > #{gold}, </if>
		  <if test="createDate != null" > #{createDate}, </if>
		  <if test="updateDate != null" > null, </if>
		  
        </trim>
	</insert>
</mapper>
