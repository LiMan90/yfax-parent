	</resultMap>

	<!-- 查询条件 -->
	<sql id="Where_Task_Condition">
		<where>
			<trim prefixOverrides="and">
				<!-- 匹配查询 -->
				<if test="taskId != null"> and act_hi_comment.TASK_ID_ = #{taskId} </if>
				<if test="procInstId != null"> and v_busi_info.procInstId= #{procInstId} </if>
				<!-- 模糊查询 -->
			</trim>
		</where>
	</sql>
	
	
	
